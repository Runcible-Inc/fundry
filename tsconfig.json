{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "plugins": [
      { "transform": "@symbolica/agentica/transformer" }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
